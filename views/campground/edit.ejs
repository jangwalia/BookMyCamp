<%- include("../partials/header") -%>
<h1 class = "text-center">Edit <%= campground.name %> Campground</h1>
<div class="container form1">
<form action = "/campgrounds/<%= campground._id %>?_method=PUT" method = "POST">
    <div class="form-group">
        <label for="camp">Camp Name</label>
        <input type="text" name = "campground[name]" class="form-control" id = "camp" value="<%= campground.name %>">
        <label for="img">Camp Image</label>
        <input type="text" name = "campground[image]" class="form-control" id = "img" value="<%= campground.image %>">
        <label for="description">Description</label>
        <input type="text" name = "campground[description]" class="form-control" id = "description" value="<%= campground.description %>">
        <label for="price">Price</label>
        <input type="text" name = "campground[price]" class="form-control" id = "price">
    </div>
        <button class ="btn btn-primary">Update</button>
    
    <a class = "btn btn-secondary"href="/">Go Home</a>

</form>
</div>
<%- include("../partials/footer") -%>