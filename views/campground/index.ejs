<%- include("../partials/header") -%>
<div class="container">
    <header class = "jumbotron">
        <div class="container">
            <h1>Welcome to The Yelp Camps</h1>
            <i class="fas fa-campground fa-3x"></i ><span>View Our Custom Campgrounds from all around the Canada</span><br>
            <hr>
            <a href="/campgrounds/new" class = "btn btn-primary btn-lg"> Add New Campground</a>
        </div>
    </header>

</div>

    <div class="container">
        <div class="row text-center d-flex flex-wrap">
            <% campgrounds.forEach((campground)=> { %>
            <div class="col-md-4 col-sm-6">
                <div class="card">
                    <img class="card-img-top" src="<%= campground.image %>" alt="Card image cap">
                    <div class="card-body">
                      <h5 class="card-title"><%= campground.name %></h5>
                      <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info....</a>
                    </div>
                  </div>
    
            </div>
                
            <% }) %>
        </div>

    </div>
        

    
     



<%- include("../partials/footer") -%>
